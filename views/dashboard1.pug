doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Dashboard
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN", crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js", integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL", crossorigin="anonymous")
    script(src="/js/product.client.js")
  body 
    section.container-fluid 
      section.row.border-bottom.border-2 
        section.col-11.m-auto.d-flex.justify-content-between.py-2 
          p.h4.mb-0 Welcome #{login.userexist.fullname.split(' ')[0]}
          a.btn.btn-danger.btn-sm(href="/logout") Logout
      section.row
        section.col-10.m-auto 
          p.mt-2.text-center.text-primary.fs-3 Product Information
          table.table.table-bordered
            thead
              tr
                th(scope="col") #
                th(scope="col") First
                th(scope="col") Last
                th(scope="col") Handle
            tbody
              tr
                th(scope="row") 1
                td Mark
                td Otto
                td @mdo
              tr
                th(scope="row") 2
                td Jacob
                td Thornton
                td @fat
              tr
                th(scope="row") 3
                td(colspan="2") Larry the Bird
                td @twitter