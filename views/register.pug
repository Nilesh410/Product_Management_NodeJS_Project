doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Registration 
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN", crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js", integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL", crossorigin="anonymous")
  body 
    section.container-fluid 
      section.row 
        section.col-4.m-auto.card.mt-4 
          if(message!=="")
            #message 
              .alert.alert-primary(role="alert") #{message}
            script.
              let message="#{message}"
                if(message!=="")
                {
                  setTimeout(()=>{
                    document.querySelector('#message').innerHTML=""},2000)
                  }
          p.mb-0.text-center.h4.mt-2.text-primary User Registration
            form(action="/save-user" method="post")
              .mb-3
                label.form-label(for="fullName") Full Name
                input.form-control#fullName(name="fullName" type="text", placeholder="Enter the full name" required)

              .mb-3
                label.form-label(for="emailId") Email Id
                input.form-control#emailId(name="emailId" type="text", placeholder="Enter the email id" required)

              .mb-3
                label.form-label(for="mobileNo") Mobile No
                input.form-control#mobileNo(name="mobileNo" type="text", placeholder="Enter the mobile no" required)

              .mb-3
                label.form-label(for="userName") User Name
                input.form-control#userName(name="userName" type="text", placeholder="Enter the user name" required)

              .mb-3
                label.form-label(for="passWord") Password
                input.form-control#passWord(name="passWord" type="text", placeholder="Enter the password" required)

              .mb-3
                label.form-label(for="confirmPassWord") Confirm Password
                input.form-control#confirmPassWord(name="confirmPassWord" type="text", placeholder="Enter the confirm password" required)

              .mb-3.text-center
                button(type="submit").btn.btn-success Save 
                button(type="reset").ms-2.btn.btn-outline-danger Reset